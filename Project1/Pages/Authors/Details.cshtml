@page
@model Project1.Pages.Authors.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Author</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author.AuthorName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author.AuthorName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author.DateOfBirth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author.DateOfBirth)
        </dd>
    </dl>

    <h5>Posts</h5>
    <ul>
        @foreach (var post in Model.Posts)
        {
            <li><a href='/Posts/Details?id= @Html.DisplayFor(modelItem => post.PostID)'>@Html.DisplayFor(modelItem => post.Title)</a></li>
        }
    </ul>


</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Author?.AuthorID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
