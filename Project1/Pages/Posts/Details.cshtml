@page
@model Project1.Pages.Posts.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Post</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.PostText)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.PostText)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.DatePublished)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.DatePublished)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.Author.AuthorName)
        </dd>
    </dl>

    <h5>Tags</h5>
    <ul>
    @foreach (var item in Model.Post.PostTags)
    {
            <li>@Html.DisplayFor(modelItem => item.Tag.TagName)</li>

    }
    </ul>

</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Post?.PostID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
