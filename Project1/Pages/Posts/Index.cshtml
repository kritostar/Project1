@page
@model Project1.Pages.Posts.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<p>
    <label>Search :</label>
    <form method="post" asp-page-handler="Search">
        <input asp-for="SearchString"/>
        <input type="submit" />
    </form>
</p>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Post[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Post[0].PostText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Post[0].DatePublished)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Post[0].Author)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Post) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatePublished)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author.AuthorName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.PostID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.PostID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.PostID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
